<div class="col-md-3 col-sm-4 col-xs-12 sideBar">
  <!-- CATEGORY SECTION -->
  <div class="panel panel-default">
    <div class="panel-heading">category</div>
    <div class="panel-body">
      <div class="collapse navbar-collapse navbar-ex1-collapse navbar-side-collapse">
        <ul class="nav navbar-nav side-nav">
          <% taxonomies.each do |taxonomy| %>
            <li>
              <%= link_to "javascript:void(0)", data: {toggle: "collapse", target: "#category-#{taxonomy.id}"} do %>
                <%= taxonomy.name %><i class="fa fa-plus"></i>
              <% end %>
              <ul id="category-<%= taxonomy.id %>" class="collapse collapseItem">
                <% taxonomy.root.leaves.each do |leaf| %>
                  <li>
                    <%= link_to potepan_category_path(leaf.id) do %>
                    <i class="fa fa-caret-right" aria-hidden="true"></i><%= leaf.name %> <span>(<%= leaf.products.count %>)</span>
                    <% end %>
                  </li>
                <% end %>
              </ul>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <!-- COLOR SECTION -->
  <div class="panel panel-default filterNormal">
    <div class="panel-heading">color</div>
    <div class="panel-body">
      <ul class="list-unstyled">
        <li><a href="#">Black<span>(15)</span></a></li>
        <li><a href="#">White<span>(10)</span></a></li>
        <li><a href="#">Red<span>(7)</span></a></li>
        <li><a href="#">Blue<span>(12)</span></a></li>
        <li><a href="#">Orange<span>(12)</span></a></li>
      </ul>
    </div>
  </div>
  <!-- SIZE SECTION -->
  <div class="panel panel-default filterNormal">
    <div class="panel-heading">size</div>
    <div class="panel-body">
      <ul class="list-unstyled clearfix">
        <li><a href="#">S<span>(15)</span></a></li>
        <li><a href="#">M<span>(10)</span></a></li>
        <li><a href="#">L<span>(7)</span></a></li>
        <li><a href="#">XL<span>(12)</span></a></li>
      </ul>
    </div>
  </div>
</div>
